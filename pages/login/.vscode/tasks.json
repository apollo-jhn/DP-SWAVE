{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TailWind Compile",
            "type": "shell",
            "command": "npx @tailwindcss/cli -i css/input.css -o css/output.css --watch",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Typescript Compile",
            "type": "shell",
            "command": "npx tsc -w",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}